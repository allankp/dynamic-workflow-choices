{
  "name": "dynamic-workflow-choices",
  "version": "2.0.0",
  "description": "GitHub Action to dynamically update workflow_dispatch input choices",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --license licenses.txt",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "all": "npm run format && npm run lint && npm run typecheck && npm run test && npm run build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allankp/dynamic-workflow-choices.git"
  },
  "keywords": [
    "github",
    "actions",
    "workflow",
    "choices",
    "dynamic",
    "input"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/allankp/dynamic-workflow-choices/issues"
  },
  "homepage": "https://github.com/allankp/dynamic-workflow-choices#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.1",
    "@typescript-eslint/parser": "^8.56.1",
    "@vercel/ncc": "^0.38.1",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.39.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^3.0.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
